<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CurrentWeatherFragment">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:indeterminateTint="#673AB7"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/curCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saint-Petersburg"
            android:layout_gravity="center_horizontal"
            android:textSize="36dp"/>
        <ImageView
            android:id="@+id/ivCurWeatherIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/cloud"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/curTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="+2Â°C"
            android:textSize="52dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
<!--        <TextView-->
<!--            android:id="@+id/curFeelsLike"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:text="Feels like 2"-->
<!--            android:textSize="20dp"/>-->
        <TextView
            android:id="@+id/curWeatherDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Scattered clouds"
            android:textSize="20dp"/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval"
            app:columnCount="3"
            app:rowCount="2"
            app:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:layout_weight="0">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cloud"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind"/>
                <TextView
                    android:id="@+id/curWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.58km/h"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/humidity"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"/>
                <TextView
                    android:id="@+id/curHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pressure"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"/>
                <TextView
                    android:id="@+id/curPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000hPa"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sunrise"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunrise"/>
                <TextView
                    android:id="@+id/curSunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70 km/h"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sunset"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunset"/>
                <TextView
                    android:id="@+id/curSunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70 km/h"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cloud"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feels like"/>
                <TextView
                    android:id="@+id/feels_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2C"/>
            </LinearLayout>
        </androidx.gridlayout.widget.GridLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHourWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/oval"

            tools:listitem="@layout/hourly_weather_item"
            tools:visibility="visible" />

    </LinearLayout>




</FrameLayout>